<div class="text-center">

<% if @orders.first == nil	 %>
 <h1> 來訂好料囉～ </h1>
 <h2>	<%= "目前沒人開團，看一下餐廳清單開個團吧！" %> </h2>
 <%= link_to "餐廳清單", restaurants_path, class: 'btn btn-warning' %>
<% else %>
<h1> 正在進行中的團購！ </h1>
<div class="table-responsive">
	<table class="table">
	<thead>
		<tr>
			<th class="text-center">
				<h3> 開團人 </h3>
			</th>
			<th class="text-center">
				<h3> 餐廳名稱 </h3>
			</th>
			<th class="text-center">
				<h3> Action </h3>
			</th>
		</tr>
	</thead>
	<tbody>
			<% @orders.each do |order| %>
			<tr>
				<td>
						<%= order.user.username %>
				</td>
				<td>
						<%= order.restaurant.name %>
				</td>
				<td>
					<%= link_to "開始訂購", new_order_orderlist_path(order), class: 'btn btn-primary' %>
					<%= link_to "查看訂購名單", order_orderlists_path(order), class: 'btn btn-primary' %>
				</td>
			</tr>
			<% end %>
	</tbody>
	<tfoot>
		<tr>
			<td>
				<%= link_to "餐廳清單", restaurants_path, class: 'btn btn-warning' %>
			</td>
		</tr>
	</tfoot>
	</table>
<% end %>
</div>


</div>



