<h1> 餐廳列表！！ </h1>

<div class="table-responsive">
	<table class="table">
	<thead>
		<tr>
			<th>
				<h3> Name </h3>
			</th>
			<th>
				<h3> Address </h3>
			</th>
			<th>
				<h3> Tel </h3>
			</th>
			<th>
				<h3> Action </h3>
			</th>
		</tr>
	</thead>
	<tbody>
		<% @restaurants.each do |restaurant| %>
		<tr>
			<td>
					<%= restaurant.name %>
			</td>
			<td>
					<%= restaurant.address %>
			</td>
			<td>
					<%= restaurant.tel %>
			</td>
			<td>
				<%= link_to "看菜單", restaurant_path(restaurant), class: 'btn btn-primary' %>
				<%= link_to "編輯餐廳", edit_restaurant_path(restaurant), class: 'btn btn-info' %>
				<%= link_to "刪除餐廳", restaurant_path(restaurant), method: :delete, class: 'btn btn-danger' %>
				
			</td>
		</tr>
		<% end %>
	</tbody>
	<tfoot>
		<tr>
			<td>
				<%= link_to "新增餐廳", new_restaurant_path, class: 'btn btn-warning' %>
			</td>
		</tr>
	</tfoot>
</table>
</div>



