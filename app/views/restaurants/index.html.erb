<div class="text-center">
	<h1> 餐廳清單 </h1>
	<br>

	<div class="table-responsive">
		<table class="table text-center">
		<thead>
			<tr>
				<th style="width: 20%" class="text-center">
					<h3> 餐廳名稱 </h3>
				</th>
				<th style="width: 40%" class="text-center">
					<h3> 地址 </h3>
				</th>
				<th style="width: 10%" class="text-center">
					<h3> 電話 </h3>
				</th>
				<th style="width: 30%" class="text-center">
					<%= link_to "新增餐廳", new_restaurant_path, class: 'btn btn-warning' %>
				</th>
			</tr>
		</thead>
		<tbody>
			<% @restaurants.each do |restaurant| %>
			<tr>
				<td>
						<%= restaurant.name %>
				</td>
				<td>
						<%= restaurant.address %>
				</td>
				<td>
						<%= restaurant.tel %>
				</td>
				<td>
					<%= link_to "看菜單", restaurant_path(restaurant), class: 'btn btn-primary' %>
					<%= link_to "編輯餐廳", edit_restaurant_path(restaurant), class: 'btn btn-info' %>
					<%= link_to "刪除餐廳", restaurant_path(restaurant), method: :delete, class: 'btn btn-danger' %>
					
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>
</div>

