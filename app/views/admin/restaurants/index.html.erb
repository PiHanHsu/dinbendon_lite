<div class="text-center">
	<h1> 餐廳清單 </h1>
	<br>

	<div class="table-responsive">
		<table class="table table-striped">
		<thead>
			<tr>
				<th style="width: 2%" class="text-center">
					<h3> # </h3>
				</th>
				<th style="width: 10%" class="text-center">
					<h3> 創建日期 </h3>
				</th>
				<th style="width: 10%" class="text-center">
					<h3> 創建者 </h3>
				</th>
				<th style="width: 18%" class="text-center">
					<h3> 餐廳名稱 </h3>
				</th>
				<th style="width: 10%" class="text-center">
					<h3> 訂購次數 </h3>
				</th>
				<th style="width: 20%" class="text-center">
					<h3> 地址 </h3>
				</th>
				<th style="width: 10%" class="text-center">
					<h3> 電話 </h3>
				</th>
				<th style="width: 20%" class="text-center">
					<%= link_to "新增餐廳", new_restaurant_path, class: 'btn btn-warning' %>
				</th>
			</tr>
		</thead>
		<tbody>
			<% @restaurants.each_with_index do |restaurant, index| %>
			<tr>
				<td>
						<%= index + 1 %>
				</td>
				<td>
						<%= restaurant.created_at.to_date %>
				</td>
				<td>
						<%= "無此資料" %>
				</td>
				<td>
						<%= restaurant.name %>
				</td>
				<td>
						<%= "無此資料" %>
				</td>
				<td>
						<%= restaurant.address %>
				</td>
				<td>
						<%= restaurant.tel %>
				</td>
				<td>
					<%= link_to "看菜單", restaurant_path(restaurant), class: 'btn btn-primary' %>
					<%= link_to "編輯", edit_restaurant_path(restaurant), class: 'btn btn-info' %>
					<%= link_to "刪除", restaurant_path(restaurant), method: :delete, class: 'btn btn-danger' %>
					
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>
</div>

